<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.ankursolution.jffmyadmin.data.model.Varients"/>
        <variable
            name="model"
            type="Varients" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_fafafa"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:overScrollMode="never"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <ImageView
                    android:fitsSystemWindows="true"
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    setImage="@{model.image}"
                    android:overScrollMode="ifContentScrolls"
                    android:src="@drawable/imgthumbnail" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginTop="16.7dp"
                    android:layout_marginEnd="16.7dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6.7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="63.3dp"
                            android:layout_height="63.3dp"
                            android:visibility="gone"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_launcher_foreground"
                            app:riv_border_color="#333333"
                            app:riv_border_width="0dip"
                            app:riv_corner_radius="10dp"
                            app:riv_mutate_background="false"
                            app:riv_oval="false"
                            app:riv_tile_mode="clamp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/product_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/grillmedium"
                                android:includeFontPadding="false"
                                android:text=""
                                android:textColor="@color/black_25303c"
                                android:textSize="15sp" />


                            <TextView
                                android:text="@{model.varientName}"
                                android:background="@drawable/rect_gray_border"
                                android:id="@+id/size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13.3sp"
                                android:padding="12dp"
                                android:layout_marginTop="5dp"
                                android:drawablePadding="5dp"
                                android:textStyle="bold"
                                android:drawableRight="@drawable/arrow"
                                android:fontFamily="@font/grillmedium"
                                android:textColor="@color/grey_828990"
                                android:includeFontPadding="false" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="11.7dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_weight="2"
                                    android:id="@+id/price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/grillmedium"
                                    android:includeFontPadding="false"
                                    setprice="@{model.varientPrice}"
                                    android:textColor="@color/black_25303c"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_weight="5"
                                    android:id="@+id/details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8.3dp"
                                    android:fontFamily="@font/grillmedium"
                                    android:includeFontPadding="false"

                                    android:textColor="@color/grey_828990"
                                    android:textSize="15sp" />


                            </LinearLayout>

                            <TextView

                                android:id="@+id/description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/grillmedium"
                                android:includeFontPadding="false"

                                android:textColor="@color/grey_828990"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/tvAdd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rect_pink_dark"
                                android:fontFamily="@font/grillmedium"
                                android:includeFontPadding="false"
                                android:paddingStart="18dp"
                                android:paddingTop="3.7dp"
                                android:paddingEnd="18dp"
                                android:paddingBottom="3.7dp"
                                android:text="ADD"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:id="@+id/liCounter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/imgMinus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rect_pink_leftcure"
                                    android:src="@drawable/ic_minus" />

                                <TextView
                                    android:id="@+id/tvNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:fontFamily="@font/grillmedium"
                                    android:includeFontPadding="false"
                                    android:text="1"
                                    android:textColor="@color/black_25303c"
                                    android:textSize="15sp" />

                                <ImageView
                                    android:id="@+id/imgPlus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rect_pink_rightcure"
                                    android:src="@drawable/ic_add" />
                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCleaningDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginTop="16.7dp"
                    android:layout_marginEnd="16.7dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/grillbold"
                    android:includeFontPadding="false"
                    android:text="customer_reviews"
                    android:textColor="@color/black_25303c"
                    android:textSize="16.7sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:paddingTop="16.7dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>