<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.ankursolution.jffmyadmin.data.model.JffKhataTransactionModel.Result"/>
        <import type="com.ankursolution.jffmyadmin.utils.ext.Common"/>
        <variable
            name="model"
            type="Result" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".jffkhata.EntryDetailFragment">


        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Ankur Upadhyay"
                    android:text="@{model.name}"
                    android:textSize="21sp"
                    android:padding="5dp"
                    android:textColor="@color/black" />


                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/grillmedium"
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />



                <TextView
                    android:id="@+id/tvDate"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@{model.timestamp}"
                    tools:text="01 Nov 21 . 09:48 PM" />


                <TextView
                    android:id="@+id/type"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/name"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="You Gave" />

                <TextView
                    android:id="@+id/tvEdit"
                    android:textSize="20sp"
                    android:textColor="@color/purple_200"
                    android:textAlignment="center"
                    android:text="EDIT ENTRY"
                    android:drawableStart="@drawable/ic_edit"
                    android:fontFamily="@font/grillbold"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:id="@+id/get"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="YOT GET"
                app:layout_constraintStart_toEndOf="@+id/gave"
                android:drawableStart="@drawable/ic_add"
                android:background="@android:color/holo_green_dark"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textAllCaps="true"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/grillbold"
                app:layout_constraintBottom_toBottomOf="parent"

                />


                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/holo_red_dark"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:indeterminateTint="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/get"
                    android:fontFamily="@font/grillbold"
                    app:layout_constraintBottom_toBottomOf="parent" />




                <TextView

                android:id="@+id/tvDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="10dp"
                android:text="Delete"
                android:drawableStart="@drawable/ic_delete"
                android:background="@android:color/holo_red_dark"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textAllCaps="true"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/get"
                android:fontFamily="@font/grillbold"
                app:layout_constraintBottom_toBottomOf="parent"

                />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>