<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.ankursolution.jffmyadmin.data.model.ProductModel.Result"/>
        <import type="com.ankursolution.jffmyadmin.data.model.Varients"/>
        <variable
            name="model"
            type="Result" />

        <variable
            name="varient"
            type="Varients" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:id="@+id/itemView"
        android:padding="10dp"
        android:layout_marginRight="9.7dp">

        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="156dp">

                <ImageView
                    setImage="@{varient.image}"
                    android:src="@drawable/slogo"
                    android:scaleType="fitXY"
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:visibility="gone"
                    android:layout_width="147.3dp"
                    android:layout_height="147.3dp"
                    android:layout_gravity="center"

                    android:scaleType="centerCrop" />


                <TextView
                    android:background="#33000000"
                    android:id="@+id/price"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/grillbold"
                    android:textSize="20sp"
                    setprice="@{varient.varientPrice}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11.3dp"
                    android:layout_gravity="start|bottom"
                    android:layout_marginEnd="11.7dp" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardElevation="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title2"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/grillbold"
                    android:text="@{model.productName}"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5.3dp"
                    android:layout_marginTop="5.3dp">

                    <TextView

                        android:fontFamily="@font/grillmedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{model.productDescription}"
                        android:layout_marginStart="4.3dp"
                        android:layout_gravity="center"
                        android:textSize="11.7sp"
                        android:id="@+id/desc" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.7dp"
                    android:orientation="horizontal">


                    <TextView
                        android:background="@drawable/rectangle_gray_border"

                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/grillbold"
                        android:gravity="center"

                        android:drawableEnd="@drawable/arrow"
                        android:textColor="#2546b0"
                        android:textSize="13.3sp"
                        android:id="@+id/size"
                        android:padding="6dp"
                        android:text="@{varient.varientName}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:visibility="gone"
                        android:background="@drawable/rectangle_gray_border"
                        android:padding="6dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/grillbold"
                        android:gravity="center"

                        android:drawableEnd="@drawable/arrow"
                        android:textColor="#2546b0"
                        android:textSize="13.3sp"
                        android:id="@+id/crust"
                        android:text="Size of pizza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Spinner

                        android:visibility="gone"
                        android:id="@+id/size_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/grillmedium"
                        android:text="₹ 220"
                        android:textColor="#2546b0"
                        android:textSize="13.3sp" />

                    <Spinner
                        android:visibility="gone"

                        android:id="@+id/crust_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/grillmedium"
                        android:text="₹ 220"
                        android:textColor="#2546b0"
                        android:textSize="13.3sp" />


                    <FrameLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView

                            android:id="@+id/delete"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_gray_border"
                            android:fontFamily="@font/grillmedium"
                            android:paddingLeft="25dp"
                            android:paddingTop="6dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="8dp"
                            android:text="Delete"
                            android:textColor="@color/orange"
                            android:textSize="14sp" />


                    </FrameLayout>


                    <FrameLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView


                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:id="@+id/edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_gray_border"
                            android:fontFamily="@font/grillmedium"
                            android:paddingLeft="25dp"
                            android:paddingTop="6dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="8dp"
                            android:text="Edit"
                            android:textColor="@color/orange"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:layout_gravity="right"
                            android:id="@+id/add_cart_linear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_silver_border"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/minus_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/grillmedium"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txt_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/grillmedium"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/plus_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/grillmedium"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="+"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>