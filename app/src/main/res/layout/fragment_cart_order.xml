<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="com.ankursolution.jffmyadmin.utils.ext.AppErrorsKt"/>
        <variable
            name="homeviewmodel"
            type="com.ankursolution.jffmyadmin.ui.HomeViewModel" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">




        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingBottom="55dp"

                android:id="@+id/li_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include
                    bind:isLoading="@{homeviewmodel.loadState.loading}"
                    bind:error="@{AppErrorsKt.toAppError(homeviewmodel.loadState.errorIfExists)}"
                    layout="@layout/my_layout_loading"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginEnd="16.7dp"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/grillbold"
                        android:includeFontPadding="false"
                        android:text="Customer Name"
                        android:textColor="@color/silver_909397"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangle_silver_border"
                        android:fontFamily="@font/grillmedium"
                        android:includeFontPadding="false"
                        android:inputType="textCapWords"
                        android:padding="15dp"
                        android:textColor="@color/title_color_22282f"
                        android:textColorHint="@color/silver_909397"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginEnd="16.7dp"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/grillbold"
                        android:includeFontPadding="false"
                        android:text="Customer Mobile"
                        android:textColor="@color/silver_909397"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangle_silver_border"
                        android:fontFamily="@font/grillmedium"
                        android:includeFontPadding="false"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="15dp"
                        android:textColor="@color/title_color_22282f"
                        android:textColorHint="@color/silver_909397"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginEnd="16.7dp"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/grillbold"
                        android:includeFontPadding="false"
                        android:text="Table No."
                        android:textColor="@color/silver_909397"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtTableNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangle_silver_border"
                        android:fontFamily="@font/grillmedium"
                        android:includeFontPadding="false"
                        android:inputType="textCapWords"
                        android:padding="15dp"
                        android:textColor="@color/title_color_22282f"
                        android:textColorHint="@color/silver_909397"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginEnd="16.7dp"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/grillbold"
                        android:includeFontPadding="false"
                        android:text="User Instruction"
                        android:textColor="@color/silver_909397"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtUserInstruction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangle_silver_border"
                        android:fontFamily="@font/grillmedium"
                        android:includeFontPadding="false"
                        android:inputType="textCapWords"
                        android:padding="15dp"
                        android:textColor="@color/title_color_22282f"
                        android:textColorHint="@color/silver_909397"
                        android:textSize="15sp" />

                </LinearLayout>




                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/grillmedium"
                        android:text="Total Price"
                        android:textColor="@color/smoke_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/grillbold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10.8dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/smoke_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10.2dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/grillmedium"
                        android:text="Delivery Charge"
                        android:textColor="@color/smoke_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/delivery_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/grillbold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10.8dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/smoke_gray" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10.2dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/grillmedium"
                        android:text="Total Save"
                        android:textColor="@color/smoke_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/grillbold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10.8dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/smoke_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10.2dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/grillmedium"
                        android:text="Grand Total"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/grand_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/grillbold"
                        android:textColor="@color/green"
                        android:textSize="16sp" />
                </LinearLayout>


                <Button
                    android:id="@+id/checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/main_bg"
                    android:fontFamily="@font/grillmedium"
                    android:text="Checkout"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rvItems"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:clipToPadding="false"
                    android:paddingTop="7.5dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>
           <TextView
               android:id="@+id/liEmpty"
                android:textSize="35sp"
                android:text="No Data found"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



    </LinearLayout>
</layout>