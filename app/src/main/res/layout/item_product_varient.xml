<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.ankursolution.jffmyadmin.data.model.Varients"/>
        <variable
            name="model"
            type="Varients" />
    </data>

    <LinearLayout
        android:id="@+id/headerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e2e2"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp" />

        <androidx.cardview.widget.CardView

            android:elevation="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="17dp"
                android:elevation="1dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    setImage="@{model.image}"
                    android:scaleType="fitXY"
                    android:id="@+id/image"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/slogo" />

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/grillbold"
                        android:layout_gravity="center"
                        android:text="@{model.varientName}"
                        android:textColor="@color/black"


                        />


                    <TextView

                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/grillmedium"
                        android:layout_gravity="center"
                        setprice="@{model.varientPrice}"
                        android:textColor="@color/black"
                        android:textSize="9sp"

                        />


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/threeDot"
                    app:tint="@color/black"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_three_dot" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e2e2"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp" />

    </LinearLayout>
</layout>